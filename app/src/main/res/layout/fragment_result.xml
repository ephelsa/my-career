            android:alpha="@integer/graphicAlpha_other"
            app:progressView_animation="decelerate"
            app:progressView_autoAnimate="true"
            app:progressView_colorProgress="@color/blue_jeans"
            app:progressView_labelSize="@dimen/font_normal" />

        <com.skydoves.progressview.ProgressView
            android:id="@+id/tenth_progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/specific_graphic_other_height"
